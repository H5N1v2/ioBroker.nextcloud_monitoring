{
    "i18n": true,
    "type": "tabs",
    "items": {
        "tab1": {
            "type": "panel",
            "label": "Connection Settings",
            "items": {
                "header_connection": {
                    "type": "header",
                    "text": "Nextcloud Multi-Server Configuration",
                    "size": 2,
                    "sm": 12
                },
                "info_text": {
                    "type": "staticText",
                    "text": "Please enter your connection details. Protocol (https://) is added automatically.",
                    "style": { 
                      "fontSize": "15px",
                      "fontWeight": "bold"
                 },                
                    "sm": 12
                },
                "servers": {
                    "type": "table",
                    "label": "Nextcloud Instances",
                    "sm": 12,
                    "items": [
                        {
                            "type": "text",
                            "attr": "name",
                            "title": "Friendly Name",
                            "width": "20%",
                            "default": "My Cloud"
                        },
                        {
                            "type": "text",
                            "attr": "domain",
                            "title": "Domain / IP",
                            "placeholder": "your-cloud.com",
                            "width": "40%"
                        },
                        {
                            "type": "password",
                            "attr": "token",
                            "title": "Token",
                            "width": "40%"
                        }
                    ]
                }
            }
        },
        "tab2": {
            "type": "panel",
            "label": "Data Options",
            "items": {
                "header_options": {
                    "type": "header",
                    "text": "Filter & Performance",
                    "size": 2,
                    "sm": 12
                },
                "interval": {
                    "type": "number",
                    "label": "Update Interval",
                    "help": "Time in minutes between API calls",
                    "unit": "min",
                    "min": 5,
                    "max": 1440,
                    "default": 10,
                    "sm": 12,
                    "md": 3
                },
                "skipApps": {
                    "type": "checkbox",
                    "label": "Skip Apps Data",
                    "help": "Check this to reduce data volume (skips detailed app list)",
                    "default": false,
                    "sm": 12,
                    "md": 3
                },
                "skipUpdate": {
                    "type": "checkbox",
                    "label": "Skip Update Check",
                    "help": "Check this to disable version checking",
                    "default": false,
                    "sm": 12,
                    "md": 3
                }
            }
        }
    }
}